{
  "name": "umi-template",
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "cz": "npx cz"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "ahooks": "^2.9.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "store": "^2.0.12"
  },
  "devDependencies": {
    "@ant-design/pro-layout": "^6.5.16",
    "@types/store": "^2.0.2",
    "@umijs/preset-react": "^1.7.12",
    "commitizen": "^4.2.2",
    "cz-conventional-changelog-chinese": "^2.3.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2",
    "umi": "^3.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-chinese"
    }
  }
}
